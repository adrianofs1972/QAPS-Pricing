  SELECT SINGLE * FROM /QAPS/AREA WHERE
ID_AREA = /QAPS/V_AREA-ID_AREA .
/QAPS/V_AREA-MANDT =
/QAPS/AREA-MANDT .
/QAPS/V_AREA-ID_AREA =
/QAPS/AREA-ID_AREA .
/QAPS/V_AREA-DESCRICAO =
/QAPS/AREA-DESCRICAO .
/QAPS/V_AREA-ATIVO =
/QAPS/AREA-ATIVO .
ENDFORM.
